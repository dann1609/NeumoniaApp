<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.edu.uninorte.neumoniaapp.CriteriosMenoresActivity"
    tools:showIn="@layout/activity_criterios_menores">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/cmentxt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Infiltrado multilobar"
            android:gravity="center_vertical"
            android:textSize="@dimen/listsize"
            android:textColor="@android:color/black"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:id="@+id/cmencheck1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/cmentxt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="hipotension con alto aporte de liquidos"
            android:gravity="center_vertical"
            android:textSize="@dimen/listsize"
            android:textColor="@android:color/black"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:id="@+id/cmencheck2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/cmentxt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PaFiO2"
            android:gravity="center_vertical"
            android:textSize="@dimen/listsize"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="@dimen/listitemwidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:hint="xxx"
            android:inputType="number"
            android:id="@+id/cmennum3" />
        <TextView
            android:id="@+id/units3"
            android:layout_width="@dimen/listitemwidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/cmentxt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leucocitos"
            android:gravity="center_vertical"
            android:textSize="@dimen/listsize"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="@dimen/listitemwidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:hint="xxx"
            android:inputType="number"
            android:id="@+id/cmennum4" />
        <TextView
            android:id="@+id/units4"
            android:layout_width="@dimen/listitemwidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:text="cels/mm3"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/cmentxt5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plaquetas"
            android:gravity="center_vertical"
            android:textSize="@dimen/listsize"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="@dimen/listitemwidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:hint="xxx"
            android:inputType="number"
            android:id="@+id/cmennum5" />
        <TextView
            android:id="@+id/units5"
            android:layout_width="@dimen/listitemwidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listsize"
            android:gravity="center"
            android:text="cels/mm3"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>
