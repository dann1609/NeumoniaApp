<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/idpaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="8dp"
                android:text="id del paciente"
                android:textSize="@dimen/listsize"

                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/riesgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riesgo: Riesgo"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Edad:"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/edad"
                    android:layout_width="@dimen/listitemwidth"
                    android:layout_height="match_parent"
                    android:text="edad"
                    android:gravity="center"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/presion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presion: xx/yy"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Temp:"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="@dimen/listitemwidth"
                    android:layout_height="match_parent"
                    android:text="temp"
                    android:gravity="center"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/frecresp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frec resp: xx"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="SO2:"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/so2"
                    android:layout_width="@dimen/listitemwidth"
                    android:layout_height="match_parent"
                    android:text="edad"
                    android:gravity="center"
                    android:textSize="@dimen/recommendation"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>